<clickhouse>
  <!-- Server logging config -->
  <logger>
    <level>debug</level>
    <console>true</console>
    <log remove="remove" />
    <errorlog remove="remove" />
  </logger>

  <!-- Add aggressive expiry for query logs -->
  <query_log>
    <database>system</database>
    <table>query_log</table>
    <partition_by>toYYYYMMDD(event_date)</partition_by>
    <ttl>event_date + INTERVAL 2 DAY DELETE</ttl>
    <flush_interval_milliseconds>7500</flush_interval_milliseconds>
  </query_log>

  <!-- Remove system log tables -->
  <asynchronous_metric_log remove="1" />
  <metric_log remove="1" />
  <opentelemetry_span_log remove="1" />
  <part_log remove="1" />
  <query_thread_log remove="1" />
  <query_views_log remove="1" />
  <session_log remove="1" />
  <trace_log remove="1" />

  <!-- Replica identity information -->
  <macros>
    <cluster>main</cluster>
    <shard>1</shard>
    <replica>1</replica>
  </macros>
  <default_replica_path>/clickhouse/tables/{database}/{uuid}/{shard}</default_replica_path>
  <default_replica_name>{replica}</default_replica_name>

  <!-- Cluster information (for distributed DDL) -->
  <remote_servers>
    <!-- matches "cluster" macro, defines a single-node cluster for DDL purposes -->
    <main>
      <shard>
        <replica>
          <host>localhost</host>
          <port>9000</port>
        </replica>
      </shard>
    </main>
  </remote_servers>

  <!-- Clickhouse Keeper for replication -->
  <zookeeper>
    <node>
      <host>clickhouse-keeper</host>
      <port>2181</port>
    </node>
  </zookeeper>
</clickhouse>
